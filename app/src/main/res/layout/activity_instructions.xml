<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#724cf9">
    <!--instructions heading-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/sevillanaregular"
        android:padding="10dp"
        android:text="Instructions"
        android:textColor="#bbf1fa"
        android:textSize="50dp" />

    <!--scrollview for the instructions-->
    <ScrollView
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--displays goal heading-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sevillanaregular"
                    android:paddingLeft="10dp"
                    android:text="Goal"
                    android:textColor="#bbf1fa"
                    android:textSize="30dp"
                    android:textStyle="bold" />
                <!--displays goal instructions-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/sevillanaregular"
                    android:paddingLeft="10dp"
                    android:text="The goal of this fun card game is to be the first person to shout out the 3 correct responses that rhyme with the 3 clues. The first person to get 10 points is the winner!"
                    android:textColor="#bbf1fa"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--displays clues and hint heading-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sevillanaregular"
                    android:paddingLeft="10dp"
                    android:text="Clues and Hint"
                    android:textColor="#bbf1fa"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!--clues and hint text-->
                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/sevillanaregular"
                        android:paddingLeft="10dp"
                        android:text="On the game screen, there will be a card that displays 3 clues and a hint. As shown on the right, you will need to think of 3 words that rhyme with the hint and correlate with the clue at the same time."
                        android:textColor="#bbf1fa"
                        android:textSize="20dp" />
                    <!--displays instruction pic-->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:src="@drawable/instruct1" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--displays scoring heading-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sevillanaregular"
                    android:paddingLeft="10dp"
                    android:text="Scoring"
                    android:textColor="#bbf1fa"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!--displays scoring instructions-->
                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/sevillanaregular"
                        android:paddingLeft="10dp"
                        android:text="Whoever shouts out the 3 correct responses first will score a point. You can give yourself the point by clicking on the button which matches your name."
                        android:textColor="#bbf1fa"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!--displays button pic for scoring-->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:src="@drawable/instruct2" />
                        <!--displays button pic for scoring-->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:src="@drawable/instruct3" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--displays other functions heading-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sevillanaregular"
                    android:paddingLeft="10dp"
                    android:text="Other Functions"
                    android:textColor="#bbf1fa"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!--displays other functions instructions about new card and help button-->
                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/sevillanaregular"
                        android:paddingLeft="10dp"
                        android:text="Can't figure out the answer to the card? Click on New Card for another card. If you ever need to come back to the instructions screen, click on the Help button. "
                        android:textColor="#bbf1fa"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!--displays new card button pic-->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:src="@drawable/instruct4" />
                        <!--displays help button pic-->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingTop="20dp"
                            android:src="@drawable/instruct5" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!--displays other functions instructions about answer button and reset button-->
                    <TextView
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/sevillanaregular"
                        android:paddingLeft="10dp"
                        android:text="Once you've shouted out 3 responses, click on the Answer button to verify if you're correct or not. If you wish to reset all the scores back to 0, click on the reset button."
                        android:textColor="#bbf1fa"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!--displays answer button pic-->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:src="@drawable/instruct6" />
                        <!--displays reset button pic-->
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingTop="20dp"
                            android:src="@drawable/instruct7" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!--button that sends user to game screen-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:background="@drawable/mybutton"
        android:fontFamily="@font/sevillanaregular"
        android:onClick="click"
        android:text="Game time!"
        android:textAllCaps="false"
        android:textColor="#bbf1fa"
        android:textSize="18dp"
        android:textStyle="bold" />


</RelativeLayout>